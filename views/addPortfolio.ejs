<html>

<head>
    <title>portfolio page </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <link rel="stylesheet" href="page.css"> -->
    <style type="text/css">
        .php {
            border-style: groove;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="col-md-12">
            <form action="addPortfolio" method="post" enctype="multipart/form-data">
                <h1 class="mt-8 p-2 bg-success  text-black rounded" style="align-items: center;">
                    ADD PORTFOLIO</h1>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <select name="projectCategory">
                                    <option selected="" disabled="">select Category</option>
                                    <% values.forEach(value=> { %>
                                        <option value="<%= value.id %>">
                                            <%= value.categoryName %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Project Name</label>
                                <input type="text" class="form-control" name="projectName" placeholder="Enter name">
                                <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error2 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Project image</label>
                                <input type="file" class="form-control" name="projectImage" multiple />
                                <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error3 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Project Title</label>
                                <input type="text" class="form-control" name="projectTitle"
                                    placeholder="Enter portfolio title">
                                <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error3 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>project Date</label>
                                <input type="date" class="form-control" name="projectDate"
                                    placeholder="Enter project Date">
                                <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error5 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>project Description</label>
                                <textarea class="form-control" maxlength="255" rows="4" cols="20"
                                    style="height: 100%!important;" name="projectDescription"></textarea>
                                <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error4 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div><br><br>
                        <a href="portfolio"><button style="margin-left: 50%;" class="btn btn-success"
                                value="submit">submit</button></a>
                    </div>
                </div><br>
            </form>
        </div>
    </div>
</body>

</html>