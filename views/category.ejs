<html>

<head>
    <title>category page </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <link rel="stylesheet" href="page.css"> -->
    <style type="text/css">
        .php {
            border-style: groove;
        }
    </style>
</head>

<body>
    <section>
        <div class="container-fluid">
            <h1 class="mt-8 p-2 bg-success  text-black rounded" style="align-items: center;">CATEGORY</h1>
            <div class="row">

                <div class="col-md-12">
                    <form action="multipleDeleteCategory" method="get"><br>
                        <div class="row">
                            <div class="col-md-4">
                                <a href="showAddCategory" class="btn btn-outline-success">Add New category</a>
                            </div>
                            <div class="col-md-3">
                                <input type="submit" class="btn btn-outline-success" value="multi Delete"
                                    onclick="return confirm('Are you sure you want to Delete?')">
                            </div>
                            <div class="col-md-3">
                                <b>category Name</b>
                            </div>
                            <div class="col-md-2"></div>

                            <% values.forEach(value=> { %>
                                <div class="row">

                                    <div class="col-md-2">
                                        <a href="/showEditCategory/<%= value._id %>"><input class="btn btn-success"
                                                type="button" value="edit"></a>
                                    </div>
                                    <div class="col-md-2">
                                        <a href="deleteCategory/<%= value._id %>"><input class="btn btn-success"
                                                id="edit" type="button" value="delete"></a>
                                    </div>

                                    <div class="col-md-3"><label><input type="checkbox" id="multiSelect"
                                                name="<%= value._id %>" value="multiSelect"></label></div>

                                    <div class="col-md-3"><input type="text" name="categoryName"
                                            value="<%= value.categoryName%>" placeholder="enter name"></div>
                                    <div class="col-md-2"></div>
                                </div>
                                <% }) %>


                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</body>

</html>