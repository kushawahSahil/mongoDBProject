<html>

<head>
    <title>Registration page </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">
    <style type="text/css">
        .can {
            border-style: inset;
        }
    </style>

</head>

<body>
    <section>
        <div class="container-fluid">
            <div style="margin: 13%;">

                <div class="can">
                    <div class="row" style="align-items: center;">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-8">
                            <h1 class="mt-8 p-2 bg-success  text-black rounded" style="align-items: center;">
                                REGISTRATION</h1>
                            <br>
                            <% if (typeof error !=='undefined' && error.length> 0) { %>
                                <div class="container">
                                    <div class="alert alert-warning" style="text-align: center;">
                                        <%= error %> &nbsp; &nbsp; &nbsp;<a href="/" style="color:#8a6d3b;">&#10006;</a>
                                    </div>
                                </div>
                                <% } %>
                                    <form action="/signup" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="fname">First Name:</label>
                                                <input type="text" name="fname" value="<%= values.fname %>"
                                                    placeholder="Enter your first name">
                                                <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error1 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="lName">Last Name:</label>
                                                <input type="text" name="lName" value="<%= values.lName %>"
                                                    placeholder="Enter your last name">
                                                <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error2 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="gender">Gender:</label>
                                                <input type="radio" name="gender" value="Male" <%=values.gender=='Male'
                                                    ? 'checked' : '' %>>Male
                                                <input type="radio" name="gender" value="Female"
                                                    <%=values.gender=='Female' ? 'checked' : '' %>>Female
                                                <input type="radio" name="gender" value="other"
                                                    <%=values.gender=='Other' ? 'checked' : '' %>>Other
                                                <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error3 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="hobby" name="hobby">Hobby:</label>
                                                <input type="checkbox" name="hobby" value="music"
                                                    <%=values.hobby=='music' ? 'checked' : '' %>>Music
                                                <input type="checkbox" name="hobby" value="read" <%=values.hobby=='read'
                                                    ? 'checked' : '' %>>Reading
                                                <input type="checkbox" name="hobby" value="drive"
                                                    <%=values.hobby=='drive' ? 'checked' : '' %>>Driving
                                                <input type="checkbox" name="hobby" value="game" <%=values.hobby=='game'
                                                    ? 'checked' : '' %>>Gaming
                                                <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error4 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="mobile">mobile.No.:</label>
                                                <input type="text" name="mobile" value="<%= values.mobile %>"
                                                    placeholder="Enter your mobile number">
                                                <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error5 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="email">Email:</label>
                                                <input type="email" name="email" value="<%= values.email %>"
                                                    placeholder="Enter your email">
                                                <% if (typeof error6 !=='undefined' && error6.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error6 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="Password">User Password:</label>
                                                <input type="password" name="Password" value="<%= values.Password %>"
                                                    placeholder="Enter your password">
                                                <% if (typeof error7 !=='undefined' && error7.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error7 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="Pswd">confirm Password:</label>
                                                <input type="password" name="Pswd" value="<%= values.Pswd %>"
                                                    placeholder="Enter your password">
                                                <% if (typeof error8 !=='undefined' && error8.length> 0) { %>
                                                    <div style="color: red;">
                                                        <%= error8 %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="city">City:</label>
                                                <select name="city">
                                                    <option value="Ahmedabad" <%=values.city=='Ahmedabad' ? 'checked'
                                                        : '' %>>Ahmedabad</option>
                                                    <option value="Surat" <%=values.city=='Surat' ? 'checked' : '' %>
                                                        >Surat</option>
                                                    <option value="Rajkot" <%=values.city=='Rajkot' ? 'checked' : '' %>
                                                        >Rajkot</option>
                                                    <option value="Navsari" <%=values.city=='Navsari' ? 'checked' : ''
                                                        %>>Navsari</option>
                                                    <option value="Junagadh" <%=values.city=='Junagadh' ? 'checked' : ''
                                                        %>>Junagadh</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <label for="image" class="control-label">Upload Image</label>
                                                <input class="form-control" style="height: 70px;
                                        padding: 20px;" value="<%= values.image %>" type="file" name="image">
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                        <div class="row">
                                            <div class="col-md-9">
                                                <input class="btn btn-success" type="submit" value="submit">
                                            </div>
                                            <div class="col-md-6"></div>
                                        </div><br>
                                    </form>
                        </div>
                        <div class="col-md-2">
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>
</body>

</html>