    <style type="text/css">
        .php {
            border-style: groove;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="col-md-12">
            <form action="addTestimonial" method="post" enctype="multipart/form-data">
                <h1 class="mt-8 p-2 bg-success  text-black rounded" style="align-items: center;">
                    ADD TESTIMONIAL</h1>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Testimonial Name</label>
                                <input type="text" class="form-control" name="TestimonialName" placeholder="Enter Name">
                                <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error1 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Designation</label>
                                <input type="text" class="form-control" name="Designation"
                                    placeholder="Enter Designation">
                                <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error2 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>Testimonial description</label>
                                <input type="text" class="form-control" name="testimonialDescription"
                                    placeholder="Enter testimonial Description">
                                <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error3 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <label>testimonial image</label>
                                <input type="file" class="form-control" name="testimonialImage">
                                <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error4 %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="col-md-1"></div>
                        </div><br><br>
                        <a href="testimonial"><button style="margin-left: 50%;" class="btn btn-success"
                                value="submit">submit</button></a>
                    </div>
                </div><br>
            </form>
        </div>
    </div>
</body>

</html>