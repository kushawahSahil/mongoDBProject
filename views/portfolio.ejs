<html>

<head>
    <title>Portfolio page </title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <link rel="stylesheet" href="page.css"> -->
    <style type="text/css">
        .php {
            border-style: groove;
        }
    </style>
</head>

<body>
    <section>
        <div class="container-fluid">
            <h1 class="mt-8 p-2 bg-success  text-black rounded" style="align-items: center;">PORTFOLIO</h1>
            <div class="row">

                <div class="col-md-12">
                    <form action="/multiDeletePortfolio" method="get"><br>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="showAddPortfolio" class="btn btn-outline-success">Add New portfolio</a>
                            </div>
                            <div class="col-md-1">
                                <input type="submit" class="btn btn-outline-success" value="multi delete"
                                    onclick="return confirm('Are you sure you want to delete?')">
                            </div>
                            <div class="col-md-1">
                                <b>Project category</b>
                            </div>
                            <div class="col-md-1">
                                <b>Project Name</b>
                            </div>
                            <div class="col-md-2">
                                <b>Project image</b>
                            </div>
                            <div class="col-md-2">
                                <b>Project Title</b>
                            </div>
                            <div class="col-md-1">
                                <b>project Date</b>
                            </div>
                            <div class="col-md-2">
                                <b>project Description</b>
                            </div><br>


                            <% values.forEach(value=> { %>
                                <div class="container-fluid" style="margin-right: 4%;">
                                    <div class="row">
                                        <div class="col-md-1">
                                            <a href="/showEditPortfolio/<%= value._id %>"><input class="btn btn-success"
                                                    type="button" value="edit"></a>
                                        </div>
                                        <div class="col-md-1">
                                            <a href="deletePortfolio/<%= value._id %>"><input class="btn btn-success"
                                                    id="edit" type="button" value="delete"></a>
                                        </div>
                                        <div class="col-md-1"><label><input type="checkbox" id="multiSelect"
                                                    name="<%= value._id %>" value="multiSelect"></label></div>

                                        <div class="col-md-1">
                                            <% value.proj_category.forEach((v)=> {%>
                                                <% if(v._id.equals(value.projectCategory)){%>
                                                    <input type="text" value="<%= v.categoryName %>">
                                                    <% }; %>
                                                        <% });%>
                                        </div>
                                        <div class="col-md-2"><input type="text" name="projectName"
                                                value="<%= value.projectName %>" placeholder="enter project name">
                                        </div>
                                        <div class="col-md-2">
                                            <% values.forEach(value=> {%>
                                                <img src="/<%= value.projectImage %>" alt="no image" height="25%"
                                                    width="25%" />
                                                <% }); %>
                                        </div>
                                        <div class="col-md-1"><input type="text" name="projectTitle"
                                                value="<%= value.projectTitle %>" placeholder="enter title">
                                        </div>
                                        <div class="col-md-2"><input type="date" name="projectDate"
                                                value="<%= value.projectDate %>" placeholder="enter date">
                                        </div>
                                        <div class="col-md-1"><textarea maxlength="245" rows="2" cols="14"
                                                name="projectDescription"><%= value.projectDescription %></textarea>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</body>

</html>